{
  "name": "medical-product-finder-with-rag",
  "version": "0.1.0",
  "private": true,
  "description": "Smart Medical Product Finder - Lean RAG MVP",
  "workspaces": [
    "apps/api",
    "apps/frontend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:frontend": "npm run dev --workspace=apps/frontend",
    "build": "npm-run-all build:*",
    "build:api": "npm run build --workspace=apps/api",
    "build:frontend": "npm run build --workspace=apps/frontend",
    "prisma:generate": "prisma generate",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "seed": "tsx scripts/seed.ts",
    "seed:clear": "tsx scripts/seed.ts -- --clear",
    "ingest": "tsx scripts/ingest.ts",
    "ingest:force": "tsx scripts/ingest.ts -- --force",
    "ingest:dry-run": "tsx scripts/ingest.ts -- --dry-run",
    "ingest:mock": "tsx scripts/ingest-mock.ts",
    "docker:up": "docker compose -f infra/docker-compose.yml --env-file .env up",
    "docker:down": "docker compose -f infra/docker-compose.yml --env-file .env down",
    "docker:build": "docker compose -f infra/docker-compose.yml --env-file .env build"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.22.0",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
